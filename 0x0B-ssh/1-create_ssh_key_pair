#!/bin/bash

# Define the filename, number of bits, and passphrase
KEY_NAME="school"
BITS=4096
PASSPHRASE="betty"

# Generate the RSA key pair
ssh-keygen -t rsa -b $BITS -f $KEY_NAME -N $PASSPHRASE

# Check if the keys were created successfully
if [[ -f "$KEY_NAME" && -f "$KEY_NAME.pub" ]]; then
    echo "Keys generated successfully:"
    echo "Private key: $KEY_NAME"
    echo "Public key: $KEY_NAME.pub"
else
    echo "Error generating keys."
fi
